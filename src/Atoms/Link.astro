---
import { COLORS } from '~/constants/Colors';
import type { ColorsType } from '~/types/Colors';

type Props = {
  class?: string;
  cassing?: 'uppercase' | 'lowercase' | 'capitalize' | 'normal-case';
  color?: ColorsType;
  url: string;
  [key: string]: any;
};

const {
  cassing = 'uppercase',
  class: parentClasses = '',
  color = COLORS.MAIN,
  url,
  ...props
} = Astro.props;
---

<a
  href={url}
  {...props}
  class="font-anton hover:text-theme-main m-0 p-0 transition-all duration-300 ease-in-out"
  class:list={{
    [cassing]: Boolean(cassing),
    [`text-theme-${color}`]: true,
    [parentClasses]: Boolean(parentClasses),
    'text-theme-main': Astro.url.pathname === url,
    'text-theme-white': Astro.url.pathname !== url,
  }}
>
  <slot />
</a>
