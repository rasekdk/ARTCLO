---
import { COLORS } from '~/constants/Colors';
import type { ColorsType } from '~/types/Colors';

type Props = {
  url: string;
  color?: ColorsType;
  class?: string;
  [key: string]: any;
};

const {
  url,
  color = COLORS.MAIN,
  class: parentClasses = '',
  ...props
} = Astro.props;
---

<a
  href={url}
  {...props}
  class="font-bebas hover:text-theme-main m-0 p-0 transition-all duration-300 ease-in-out"
  class:list={{
    [`text-theme-${color}`]: true,
    [parentClasses]: Boolean(parentClasses),
    'text-theme-main': Astro.url.pathname === url,
    'text-theme-white': Astro.url.pathname !== url,
  }}
>
  <slot />
</a>
