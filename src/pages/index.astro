---
// Layout
import Layout from '~/layouts/Layout.astro';

// Sections
import Main from '~/section/Main.astro';

// Atoms
import Title from '~/atoms/Title.astro';

// Constants
import { COLORS } from '~/constants/Colors';
---

<Layout
  headerSize="medium"
  mainSize="medium"
  asideSize="medium"
  asideBackground="pattern"
>
  <Main
    class="m-0 w-1/3 bg-[url('/images/streetDoor.jpg')] bg-cover bg-center p-0"
  />

  <div class="flex h-full w-full items-end p-0" slot="aside">
    <Title title="Art & Clothing" level={3} color={COLORS.MAIN} />
  </div>
</Layout>
