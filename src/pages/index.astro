---
// Layout
import Layout from '~/layouts/Layout.astro';

// Sections
import Main from '~/section/Main.astro';

// Atoms
import Title from '~/atoms/Title.astro';

// Constants
import { COLORS } from '~/constants/Colors';
---

<Layout
  headerSize="medium"
  mainSize="medium"
  asideSize="large"
  asideBackground="pattern"
>
  <Main
    class="m-0 w-2/3 bg-[url('/images/streetDoor.jpg')] bg-cover bg-center p-0"
  />

  <Title title="Art & Clothing" level={3} color={COLORS.MAIN} slot="aside" />
</Layout>
