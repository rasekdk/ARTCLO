---
import Aside from '~/section/Aside.astro';
import CartScroll from '~/components/CartScroll.astro';
import Header from '~/section/Header.astro';
import Layout from '~/layouts/Layout.astro';
import Main from '~/section/Main.astro';
import Title from '~/atoms/Title.astro';

import { COLORS } from '~/constants/Colors';
const currentPath = Astro.url.pathname;
---

<Layout>
  <Header currentPath={currentPath} />

  <Main
    class="m-0 w-1/3 bg-[url('/images/streetDoor.jpg')] bg-cover bg-center p-0"
  />

  <Aside
    class="m-0 w-1/3 bg-[url('/svg/topography.svg')] bg-cover bg-center bg-no-repeat p-0"
  >
    <div class="flex h-1/1 w-full items-end p-0">
      <Title title="Art & Clothing" level={3} color={COLORS.MAIN} />
    </div>
    <CartScroll scroll={false} />
  </Aside>
</Layout>
