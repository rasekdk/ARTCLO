---
// Layout
import Layout from '~/layouts/Layout.astro';

// Sections
import Main from '~/section/Main.astro';

// Atoms
import Link from '~/atoms/Link.astro';
import Title from '~/atoms/Title.astro';

// Constants
import COLORS from '~/constants/Colors';
---

<Layout
  headerSize="small"
  mainSize="medium"
  asideSize="small"
  asideBackground="transparent"
>
  <Main
    class="m-0 w-1/3 bg-[url('/images/collection.jpg')] bg-cover bg-center p-0"
  >
    <div>
      <div>
        <Title
          title="A curated drop that defines our season"
          level={1}
          color={COLORS.WHITE}
        />
        <Title
          title="Not just pieces â€” but a vision in fabric"
          level={2}
          color={COLORS.WHITE}
        />
      </div>
      <div>
        <Link href="/clothing" class="text-[clamp(1.5rem, 4vw, 5rem)"
          >Clothing</Link
        >
        <Link href="/footwear" class="text-[clamp(1.5rem, 4vw, 5rem)"
          >Footwear</Link
        >
      </div>
    </div>
  </Main>
</Layout>
