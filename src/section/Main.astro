---
import Title from '~/atoms/Title.astro';
import { FONTS } from '~/constants/Fonts';

type Props = {
  class?: string;
  [key: string]: any;
};

const { class: className = '', ...props } = Astro.props as Props;
---

<main
  id="mainSection"
  {...props}
  class="bg-theme-white text-theme-black flex w-full max-w-2/3 min-w-1/3 flex-col overflow-y-auto p-4"
  class:list={className}
>
  <slot />
</main>

<style>
  main {
    padding: 1rem;
    text-align: center;
    width: 100%;
  }
</style>
