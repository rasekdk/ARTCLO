---
// Const
import { asideColors } from '~/constants/Aside';

// Types
import type { AsidePropsType } from '~/types/Sections';

// Components
import CartScroll from '~/components/CartScroll.astro';

const {
  background = 'white',
  class: className = '',
  size = 'medium',
  scroll = false,
  ...props
} = Astro.props as AsidePropsType;

const { backgroundClass } = asideColors[background];
---

<aside
  class="absolute top-0 right-0 flex h-full min-h-full items-end bg-cover bg-no-repeat"
  class:list={{
    [`${backgroundClass}`]: Boolean(backgroundClass),
    className,
    'w-0 p-0': size === 'small',
    'w-16 p-0': size === 'medium',
    'w-1/3 p-4': size === 'large',
    'max-w-2/3 p-4': size === 'xlarge',
  }}
>
  <slot />
</aside>

<CartScroll scroll={scroll} background={background} />
